{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules", "integrationTest", "test", "test-app.ts"]
}
